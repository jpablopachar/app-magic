@model IEnumerable<client.Dtos.TownDto>;

@{
    ViewData["Title"] = "IndexTown";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Villas</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Town" asp-action="CreateTown" class="btn btn-outline-primary"><i
                    class="bi bi-plus-square-fill"></i> Crear Nueva Villa</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Ocupantes</th>
                <th>Tarifa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var town in Model)
            {
                <tr>
                    <td>@town.Name</td>
                    <td>@town.Occupants</td>
                    <td>@((town.Fee).ToString("c"))</td>
                    <td>
                        <a asp-controller="Town" asp-action="UpdateTown" asp-route-villaId="@town.Id"
                            class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="Town" asp-action="RemoveTown" asp-route-villaId="@town.Id"
                            class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>