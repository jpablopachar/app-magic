@model IEnumerable<client.Dtos.TownNumberResponseDto>
@{
    ViewData["Title"] = "IndexTownNumber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de NÃºmero de Villas</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="TownNumber" asp-action="CreateTownNumber" class="btn btn-outline-primary"><i
                    class="bi bi-plus-square-fill"></i> Crear Nuevo Numero de Villa</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre de la Villa</th>
                <th>Numero de Villa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var townNumber in Model)
            {
                <tr>
                    <td>@townNumber.Town!.Name</td>
                    <td>@townNumber.TownNo</td>
                    <td>
                        <a asp-controller="TownNumber" asp-action="UpdateTownNumber" asp-route-townNo="@townNumber.TownNo"
                            class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="TownNumber" asp-action="RemoveTownNumber" asp-route-townNo="@townNumber.TownNo"
                            class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
